body {
  font-family: sans-serif;
  text-align: center;
  padding: 2rem;
  background: #0f172a;
  color: #fff;
}

button {
  font-size: 1rem;
  padding: 0.5rem 1rem;
  margin: 1rem;
  cursor: pointer;
  background: #3b82f6;
  color: white;
  border: none;
  border-radius: 0.5rem;
}

.hidden {
  display: none;
}

#gate {
  margin-top: 2rem;
  font-size: 1.5rem;
  color: #22c55e;
}
